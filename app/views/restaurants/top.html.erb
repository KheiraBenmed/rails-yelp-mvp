<h1>Voici la liste des meilleurs restaurants</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <ul class ="list_group">
        <% @restaurants.each do |restaurant| %>
        <li class="list-group-item">
          <h3><%= restaurant.name %></h3>
          <p><%= restaurant.stars %>*</p>
          <%= link_to "index", restaurant_path(restaurant) %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
